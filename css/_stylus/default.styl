body
  font-family "Lato", arial, tahoma, sans-serif
  font-size 14px
  line-height 140%





#container
  width 600px
  margin 50px auto

  #main

    h1
      margin 60px 0 30px 0
      font-size 3em
      // font-family georgia
      font-style italic
      font-weight normal
      &:first-of-type
        margin-top 10px

    h2
      font-size 1.5em
      font-weight bold
      margin 60px 0 30px 0

    a
      color blue

    form
      margin 30px 0
      > div
        margin 10px 0

      $height = 30px
      input
      button
        height $height
        border 1px solid #aaa
        box-sizing border-box
        width 200px
        padding 5px 8px
        line-height $height - 10px

      input.validated
      select.validated
      textarea.validated
        background #eef9ee
        border-color #9a9
      input.error
      select.error
      textarea.error
        background #fff6f6
        border-color #eaa

      .errors
        margin-left 15px
        height $height
        line-height $height
        color #b44

    code 
      color #666
      font-family menlo, monospace
      font-size 12px
      border 1px dashed #ddd
      background #fafafa
      padding 0px 5px
      display inline-block
    pre
      border 1px solid #ddd
      background #fafafa
      padding 6px 10px
      overflow auto
      > code
        border none
        padding none
        background transparent



  footer
    margin-top 150px
    color #aaa
    text-align justify
    a
      color @color
